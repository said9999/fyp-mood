<div class='row'>
	<div class="panas-test-panel col-md-10 col-md-offset-1">
		<div class="panel panel-default" align="center" class="overlay">
			<div class='overlay'>
				<img id='testPic' {{bind-attr src="imgUrl"}} class="img-circle test-photos">
			</div>
                  
                  <div>{{tag}}</div>
                  
                  <div style="width: 250px;" class="slider slider-horizontal" {{action 'changeBrightness' 'yes'}}>
                        <div class="slider-track">
                              <div style="left: 0%; width: 50%;" class="slider-selection"></div>
                              <div style="left: 50%;" class="slider-handle round"></div>
                              <div style="left: 0%;" class="slider-handle round hide"></div>
                        </div>

                        <div style="top: -40px; left: 23px;" class="tooltip top">
                              <div class="tooltip-arrow"></div><div class="tooltip-inner">Current value: 5</div>
                        </div>

                        <input style="" class="span2" value="4" id="sl1" type="text">
                  </div>

                  <div class="button-group">
                  	<div class='row'>
                  		<div>
                              {{#unless isFirstPage}}
                  			<button id="preBtn" {{action 'changeTest' '-'}} class="control-btn btn btn-default">
                                          Back
                                    </button>
                              {{/unless}}

                              {{#unless isLastPage}}
                  			<button id="nextBtn" {{action 'changeTest' '+'}} class="control-btn btn btn-default">Next</button>
                              {{else}}
                                    <button id="nextBtn" {{action 'submitResult'}} class="control-btn btn btn-info">Submit</button>
                              {{/unless}}
                              
                              
                  		</div>
                  	</div>
                  </div>
		</div>

            <div class="test-progressbar"> 
                  <div class="progress">
                        <div id='test-progress' class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" {{bind-attr style="progress_per"}}>
                          <span class="sr-only"></span>
                        </div>
                  </div>
            </div>
	
      </div>
</div>



